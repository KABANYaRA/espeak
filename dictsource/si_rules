.group 0xe0b6   // characters which start with UTF-8 bytes: [e0 b6]
	ං	m  // anusvaraya
	ඃ	n  // visargaya


.group 0xe0b7   // characters which start with UTF-8 bytes: [e0 b7]
	ා	a:
	ැ	&
	ෑ	&:
	ි	i
	ී	i:
	ු	u
	ූ	u:
	ෘ	ru
