	ො	o
	ෝ  	o:
	ෞ	aU
	ෟ	li
	ෲ	ru:
	ෳ	li:

	්	// hal kirima (virima)


.group 0xe0a4  // devanagari
	0xe0a4  _^_HI  // switch to hindi voice for devanagari characters
.group 0xe0a5  // devanagari
	0xe0a5  _^_HI

.group 0xe0ae  // Tamil
	0xe0ae  _^_TA  // switch to Tamil voice for Tamil characters
.group 0xe0af  // Tamil
	0xe0af  _^_TA


.group
	$	do:l.ar


